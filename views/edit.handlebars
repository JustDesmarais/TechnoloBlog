<div class="login-card">
    <h2 class="cardheader">Edit Post</h2>
    <form class="form edit-post-form">
      <div class="form-group">
        <label for="post-title">Post Title:</label>
        <input class="form-input" type="text" id="post-title" value="{{this.title}}" />
      </div>
      <div class="form-group">
        <label for="edit-post-text">Post Text:</label>
        <input class="form-input" type="text" id="edit-post-text" value="{{this.content}}"/>
      </div>
      <div class="form-group">
        <button class="btn btn-primary edit-post-form" type="submit" data-id="{{this.id}}">Submit Changes</button>
      </div>
    </form>
</div>