
{{#each userPosts}}
<div class="postcard" data-id={{this.id}}>
    
        <div class="cardheader">
            <a href="/post/{{this.id}}">
              <h2>{{this.title}}</h2>
            </a>
            <p>Posted on {{this.createdAt}}<span><button style="font-size:20px margin:3px"><i class="fa fa-trash-o" id='delete-button' data-id={{this.id}}></i></button></span></p>
        </div>
    
    <div class="cardbody">
        <p>{{this.content}}</p>
    </div>
</div>
{{/each}}

<div id="new-button">
    <a href="/new-post">
        <button class="btn btn-primary">+ New Post</button>
    </a>
</div>

